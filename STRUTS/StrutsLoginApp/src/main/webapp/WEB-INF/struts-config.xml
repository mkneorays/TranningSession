<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
	<form-beans>
		<form-bean name="loginFormRavi" type="com.neorays.form.LoginForm"/>
	</form-beans>
	
	<action-mappings> 
		<action path="/login" type="com.neorays.action.LoginAction" name="loginFormRavi" scope="request">
			<forward name="success" path="/pages/success.jsp" />
			<forward name="failure" path="/pages/failure.jsp" />
		</action>
	</action-mappings> 
	 <message-resources parameter="myapp.ApplicationResources"/>
</struts-config> 